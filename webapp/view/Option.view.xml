<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" controllerName="Coinbo.controller.Option">
	<App>
		<Page id="optionPage" title="{i18n&gt;homePageTitle}">
		    <headerContent>
				<Image src="{img&gt;/products/pic1}" height="100%" width="100%"/>
			</headerContent>
			<subHeader>
				<Toolbar>
					<Button icon="sap-icon://nav-back" press="onBack"/>
					<Label class="sapUiMediumMargin" text="Inicio" textAlign="Center"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://decline" press="onClose"/>
				</Toolbar>
			</subHeader>
			<content>
				<TileContainer>
					<StandardTile icon="sap-icon://display" type="Monitor" title="Aprobar" press="toAprobar"/>
					<StandardTile icon="sap-icon://crm-service-manager" type="Monitor" title="Calcular" press="toCalcular"/>
					
				</TileContainer>
			</content>
			<footer>
				<Toolbar class="sapUiAccent5">
					<ToolbarSpacer/>
					    <Text class="myCustomText" text="{i18n&gt;footPage}" textAlign="Center"/>
					<ToolbarSpacer/>
				</Toolbar>
			</footer>
		</Page>
	</App>
</mvc:View>