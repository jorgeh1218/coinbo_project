<mvc:View 	controllerName="Coinbo.controller.Login" xmlns="sap.m" 	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<App>
		<Page title="{i18n>homePageTitle}">
			    <headerContent >
					    <Image src="{img>/products/pic1}" height="100%"	width="100%" />	
				</headerContent>
				<subHeader>
					<Toolbar>
					   <Text text="Autenticacion" 
					   class="sapUiMediumMargin"/>
					   <ToolbarSpacer />
					   <Button icon="sap-icon://action-settings"
						press="onSubmitDialog"/>
					</Toolbar>
				</subHeader>
				<content>
						<FlexBox class="sapUiLargeMargin"	height="80%" alignItems="Center" justifyContent="Center">
							<items>
								<Panel class="sapThemeHighlight-asColor">
									<content>
										<Panel headerText="Login" class="@sapUiAccent1">
											<core:Icon	src="sap-icon://employee" class="sapUiSmallMargin"/>
											<Label text="Usuario"/>
											<Input placeholder="Ingrese Usuario ..." />
											<core:Icon	src="sap-icon://key" class="sapUiSmallMargin"/>
											<Label text="Clave"/>
											<Input	type="Password"	placeholder="Ingrese Clave ..." />
											<Button type="Emphasized" id="login" text = "Enviar" width="100%" press="onPress"/>
										</Panel>
									</content>
								</Panel>
							</items>
						</FlexBox>
				</content>
		        <footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Label text="{i18n>footPage}" textAlign="Center"/>
						<ToolbarSpacer/>
					</Toolbar>
				</footer>
		</Page>
	</App>	
</mvc:View>